{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "main",
  "description": "Capability for the main window",
  "platforms": ["linux", "macOS", "windows"],
  "local": true,
  "windows": ["main"],
  "permissions": [
    "path:default",
    "event:default",
    "window:default",
    "app:default",
    "resources:default",
    "menu:default",
    "tray:default",
    "fs:allow-read-file",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "args": false,
          "cmd": "",
          "name": "./bin/ffmpeg",
          "sidecar": true
        }
      ]
    },
    "dialog:allow-open",
    "dialog:allow-save",
    "shell:default",
    "dialog:default",
    {
      "identifier": "fs:default",
      "allow": [
        {
          "path": "$APPDATA/**"
        }
      ]
    },
    {
      "identifier": "fs:scope",
      "allow": [
        {
          "path": "$APPDATA/*"
        }
      ]
    },
    "shell:allow-open",
    "log:default",
    "os:allow-platform"
  ]
}
